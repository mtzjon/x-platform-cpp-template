        // Test Executables
        {
            "name": "üß™ Debug Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/cpp_template_tests",
            "args": [
                "--gtest_catch_exceptions=0",
                "--gtest_break_on_failure=1",
                "--gtest_color=yes"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint on test failures",
                    "text": "-gdb-set breakpoint pending on",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build Tests",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üß™ Debug Specific Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/cpp_template_tests",
            "args": [
                "--gtest_filter=${input:testFilter}",
                "--gtest_catch_exceptions=0",
                "--gtest_break_on_failure=1",
                "--gtest_color=yes"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build Tests",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "‚ö° Debug Benchmarks",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/cpp_template_benchmarks",
            "args": [
                "--benchmark_color=true",
                "--benchmark_format=console"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build Tests",
            "internalConsoleOptions": "openOnSessionStart"
        },

        // Advanced Debugging Configurations
        {
            "name": "üîç Debug with Valgrind",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/valgrind",
            "args": [
                "--tool=memcheck",
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "${workspaceFolder}/build/examples/basic_usage"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "üèóÔ∏è Build Examples",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üõ°Ô∏è Debug with AddressSanitizer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/basic_usage",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "abort_on_error=1:halt_on_error=1:print_stats=1"
                }
            ],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build Examples",
            "internalConsoleOptions": "openOnSessionStart"
        },

        // Attach to Process
        {
            "name": "üîó Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/examples/basic_usage",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        // Remote Debugging (for Docker)
        {
            "name": "üê≥ Debug in Docker Container",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/developer/workspace/build/examples/basic_usage",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/home/developer/workspace",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:9090",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/home/developer/workspace": "${workspaceFolder}"
            }
        },

        // LLDB Configurations (alternative debugger)
        {
            "name": "üîß Debug with LLDB",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/basic_usage",
            "args": [],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "üèóÔ∏è Build Examples"
        },

        // Custom Current File Debug
        {
            "name": "üéØ Debug Current File",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build All"
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "description": "Enter test filter (e.g., CoreTest.*, *ProcessItems*)",
            "default": "*",
            "type": "promptString"
        }
    ]
}