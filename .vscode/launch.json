{
    "version": "0.2.0",
    "configurations": [
        // Example Applications
        {
            "name": "üöÄ Debug Basic Usage",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/basic_usage",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üèóÔ∏è Build Examples",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "‚öôÔ∏è Debug Config Example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/config_example",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
