{
    "version": "2.0.0",
    "tasks": [
        // Build Tasks
        {
            "label": "ğŸ”¨ Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DBUILD_TESTS=ON",
                "-DBUILD_DOCS=ON",
                "-DBUILD_EXAMPLES=ON",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Configure the project with CMake"
        },
        {
            "label": "ğŸ—ï¸ Build All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--parallel"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc",
                "$clang"
            ],
            "detail": "Build the entire project",
            "dependsOn": "ğŸ”¨ Configure CMake"
        },
        {
            "label": "ğŸ—ï¸ Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "cpp_template_tests",
                "--parallel"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc",
                "$clang"
            ],
            "detail": "Build only the test executables",
            "dependsOn": "ğŸ”¨ Configure CMake"
        },
        {
            "label": "ğŸ—ï¸ Build Examples",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "examples",
                "--parallel"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
